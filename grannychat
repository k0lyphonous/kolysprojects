<script>
function generateGrannyMessage() {
    const templates = [
        "Oh dearie, that's wonderful! ğŸ‘µ",
        "Would you like more cookies? ğŸª",
        "Don't forget to wear a warm sweater! â¤ï¸",
        "Have you eaten today? You look so thin on my screen! ğŸ¥˜",
        "Let me tell you about what your cousin Martha did... ğŸ‘€",
        "I saw this on the Facebook! ğŸ“±",
        "Come visit soon, I made your favorite pie! ğŸ¥§",
        "Did you see what Agnes from my bridge club posted? Scandalous! ğŸ˜®",
        "Your grandfather says hi from heaven ğŸ‘¼",
        "I'm learning to do the TikTok dances! ğŸ’ƒ",
        "Back in my day, we didn't have these fancy phones... ğŸ“",
        "I'm sending you a virtual hug, sweetie! ğŸ¤—",
        "Have you met any nice boys/girls lately? ğŸ’•",
        "I'm forwarding you another minion meme! ğŸ˜„",
        "Remember to say your prayers, dearie! ğŸ™",
        "Your aunt Susan had another surgery. Should I tell you all about it? ğŸ¥",
        "Did you get the chain letter I forwarded? You must send it to 10 people! âœ‰ï¸",
        "I printed the internet today! ğŸ–¨ï¸",
        "How do I make this bigger? WHERE IS THE CAPS LOCK? ğŸ‘“",
        "Your mother tells me you're not calling her enough! ğŸ“",
        "I made too much casserole again... wish you were here! ğŸ¥˜",
        "Let me tell you about this wonderful new cream for arthritis... ğŸ’Š",
        "Have you been getting enough vitamin C? ğŸŠ",
        "The weather channel says rain tomorrow. Don't forget your umbrella! â˜”"
    ];
    
    const randomIndex = Math.floor(Math.random() * templates.length);
    return templates[randomIndex];
}

function sendMessage() {
    const input = document.getElementById('messageInput');
    const container = document.getElementById('chatContainer');
    
    if (input.value.trim() !== '') {
        // Create user message
        const userMessage = document.createElement('div');
        userMessage.className = 'message sent';
        userMessage.textContent = input.value;
        container.appendChild(userMessage);
        
        // Clear input
        input.value = '';
        
        // Simulate grandma typing with multiple messages
        let delay = 1500;
        const numberOfResponses = Math.floor(Math.random() * 3) + 1; // 1-3 responses
        
        for(let i = 0; i < numberOfResponses; i++) {
            setTimeout(() => {
                const grannyMessage = document.createElement('div');
                grannyMessage.className = 'message received';
                grannyMessage.textContent = generateGrannyMessage();
                container.appendChild(grannyMessage);
                
                // Scroll to bottom
                container.scrollTop = container.scrollHeight;
                
                // 20% chance of sending a follow-up after a short delay
                if (Math.random() < 0.2) {
                    setTimeout(() => {
                        const followUp = document.createElement('div');
                        followUp.className = 'message received';
                        followUp.textContent = "Oh! And one more thing... " + generateGrannyMessage();
                        container.appendChild(followUp);
                        container.scrollTop = container.scrollHeight;
                    }, 800);
                }
            }, delay);
            
            delay += Math.random() * 2000 + 1000; // Add 1-3 seconds between messages
        }
        
        // Scroll to bottom
        container.scrollTop = container.scrollHeight;
    }
}

// Allow sending with Enter key
document.getElementById('messageInput').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        sendMessage();
    }
});
</script>
